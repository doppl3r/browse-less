{
  "name": "Browse Less",
  "description": "Break your browsing habit one scroll at a time.",
  "version": "0.3",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "www/popup.html",
    "default_title": "Browse Less"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "run_at": "document_end",
    "js": ["www/js/main.js"],
    "css": ["www/css/browse-less.css"]
  }],
  "web_accessible_resources": ["www/js/browse-less.js"],
  "icons": { 
    "16": "www/img/icons/icon16.png",
    "48": "www/img/icons/icon48.png",
    "128": "www/img/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}